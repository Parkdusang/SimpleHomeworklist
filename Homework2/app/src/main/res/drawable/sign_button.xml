<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="90"
                android:centerX="35%"
                android:centerColor="#898686"
                android:startColor="#c9c6c6"
                android:endColor="#dadada"
                android:type="linear"
                />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />


        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="90"
                android:centerX="35%"
                android:centerColor="#767373"
                android:startColor="#aeaeae"
                android:endColor="#c1c1c1"
                android:type="linear"
                />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />
        </shape>
    </item>
</selector>