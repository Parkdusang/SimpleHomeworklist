<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e4e0b9"
    tools:context="com.example.parkdusang.homework2.InformationMiniCalculator">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tip Calculator!"
        android:id="@+id/textView2_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start TipCalculator"
        android:id="@+id/button2_1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/sign_button"
        android:textColor="#ffffff"/>

    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Information TipCalculator \n\n Start TipCalculator 를 누르게 되면 이전에 만들었던 TipCalculaotr 가 시행됩니다"
        android:id="@+id/textView2_2"
        android:layout_below="@+id/textView2_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"

        android:layout_above="@+id/button2_1"
        android:background="@drawable/textview_edit2"/>
</RelativeLayout>